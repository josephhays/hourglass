source 'https://rubygems.org'


# rails is cool and all but deadpool 2 is coming out i hear
gem 'rails', '4.2.6'
## The defaults cluster, json apis, jquery lib, sass, coffee script. Everything Joseph
## not to unleash hell fire on
# Sass and Coffee because I like sassy coffee.
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
# Build JSON APIs with ease. Thanks, Billy Mays!
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# Postgres to prepare for Digital Ocean hosting.
gem 'pg'
# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Authentication MVC
gem 'devise'

# Bootstrap for beautification. Because I'm worth it.
gem 'bootstrap-sass'
gem 'simple_form' # Simplifies form buildin'.

# Use Unicorn as the app server for production
# (Only for DigitalOcean mounting and DO development. Use WEBRICK on local like a normie.)
# gem 'unicorn'

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'

  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
end
